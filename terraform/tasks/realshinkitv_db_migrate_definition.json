[
  {
    "name": "backend-container",
    "image": "811331963814.dkr.ecr.ap-northeast-1.amazonaws.com/realshinkitv-backend",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "db-migrate",
        "awslogs-group": "/ecs/db-migrate"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "command": ["bundle", "exec", "rails", "db:migrate"],

    "environment": [
      {
        "name": "API_DOMAIN",
        "value": "https://realshinkitv.com"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "CONTAINER_PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "access_key_id"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "secret_access_key"
      },
      {
        "name": "DATABASE_URL",
        "valueFrom": "portfolio_database_url"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "portfolio_rails_master_key"
      }
    ]
  }
]
